@model IdentityBase.Public.Actions.Register.ConfirmViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Complete your registration</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Account</h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="Register" asp-action="Confirm" asp-route-key="@Model.Key">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordConfirm"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="PasswordConfirm" autocomplete="off">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Complete</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>