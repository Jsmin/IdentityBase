@model IdentityBase.Public.Actions.Login.LoginViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Login</h1>
    </div>
    
    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6" show-if="@Model.EnableLocalLogin">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Account</h3>
                </div>
                <div class="panel-body">

                    <form asp-controller="Login" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl" novalidate>

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="E-Mail" asp-for="Email" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div show-if="@Model.EnableRememberLogin" class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <strong>Remember My Login</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </fieldset>
                    </form>
                    <ul class="list-inline">
                        <li show-if="@Model.EnableAccountRecover"><a asp-route="Recover" asp-route-returnUrl="@Model.ReturnUrl">Forgot password?</a></li>
                        <li show-if="@Model.EnableAccountRegistration"><a asp-route="Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></li>
                    </ul>
                </div>
            </div>
        </div>

        @Html.Partial("_ExternalLogins", Model)
    </div>
</div>